/**
 * Implementa hook_page_alter().
 */
function foro_contactenos_page_alter(&$page) {
    if (arg(0) == 'contactenos-foros-economicos' || arg(0) == 'contactenos') {      
        unset($page['header']);
        unset($page['help']);
        unset($page['highlighted']);
        unset($page['featured']);
        unset($page['sidebar_second ']);
        unset($page['highlighted']);
        unset($page['sidebar_first']);
    }
}